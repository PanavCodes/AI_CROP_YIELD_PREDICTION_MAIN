# Enhanced Crop Prediction API Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
CLIENT_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/crop-prediction
# Alternative: MongoDB Atlas connection string
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/crop-prediction

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret Key (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =============================================================================
# EXTERNAL API KEYS (AGRISENSE TECH STACK)
# =============================================================================

# Weather API (get from: https://www.weatherapi.com/)
WEATHER_API_KEY=your_weather_api_key_here

# Hugging Face Token for AI services (get from: https://huggingface.co/)
HF_TOKEN=your_hugging_face_token_here

# Google Gemini API Key (existing functionality)
GEMINI_API_KEY=your_gemini_api_key_here

# Bhuvan API Configuration (existing)
BHUVAN_API_KEY=730f11543ab5c91ebafa749c4ec72c87b06736c6

# Unsplash API for images (get from: https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# AgMarkNet API for crop prices (get from: https://data.gov.in/)
AGMARKNET_API_KEY=your_agmarknet_api_key_here

# =============================================================================
# AI SERVICE INTEGRATION
# =============================================================================
# Python AI Service URL (if you have a separate AI service)
PYTHON_AI_SERVICE_URL=http://localhost:8000

# =============================================================================
# DEVELOPMENT / TESTING
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info
